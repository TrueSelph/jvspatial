# Authentication Configuration
JVSPATIAL_JWT_SECRET=your-secret-key
JVSPATIAL_JWT_ALGORITHM=HS256
JVSPATIAL_JWT_EXPIRATION_HOURS=24

# API Keys (comma-separated list)
JVSPATIAL_API_KEYS=key1,key2,key3

# Role-Based Access Control
JVSPATIAL_DEFAULT_ROLE=user
JVSPATIAL_ADMIN_ROLES=admin,superuser
JVSPATIAL_MANAGER_ROLES=manager,team_lead

# Permission Configuration
JVSPATIAL_DEFAULT_PERMISSIONS=read_public
JVSPATIAL_ADMIN_PERMISSIONS=read_all,write_all,manage_users
JVSPATIAL_USER_PERMISSIONS=read_public,read_own,write_own

# Security Settings
JVSPATIAL_REQUIRE_HTTPS=true
JVSPATIAL_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
JVSPATIAL_MAX_TOKEN_AGE=3600  # 1 hour in seconds

# Database Configuration
JVSPATIAL_DB_TYPE=mongodb
JVSPATIAL_MONGODB_URI=mongodb://localhost:27017
JVSPATIAL_MONGODB_DB_NAME=jvspatial_auth_example

# Optional: Redis Session Cache
JVSPATIAL_CACHE_ENABLED=true
JVSPATIAL_CACHE_TYPE=redis
JVSPATIAL_REDIS_URL=redis://localhost:6379/0
JVSPATIAL_SESSION_TTL=3600  # 1 hour in seconds